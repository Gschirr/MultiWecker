<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hallo zum MultiWecker"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.057" android:layout_marginTop="193dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="133dp"
            android:layout_marginStart="133dp" android:layout_marginEnd="134dp" android:layout_marginRight="134dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp" app:srcCompat="@drawable/clocks" android:id="@+id/clockImage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="33dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/clockIcon_description"/>
    <com.google.android.material.switchmaterial.SwitchMaterial
            android:text="Switch"
            android:layout_width="160dp"
            android:layout_height="28dp" android:id="@+id/switch1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="142dp"
            android:layout_marginStart="142dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="375dp"
            android:checked="false"/>

    <Button
            android:text="@string/newRoutine_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/createRoutineButton"
            android:layout_marginEnd="56dp" android:layout_marginRight="52dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="88dp"
            android:onClick="switchToRoutineView"/>
    <Button
            android:text="@string/chooseRoutine_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/chooseRoutineButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="88dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="52dp" android:layout_marginStart="52dp"
            android:onClick="switchToChooseRoutineView"/>
</androidx.constraintlayout.widget.ConstraintLayout>